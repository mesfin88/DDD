@using Boven.Areas.WData.BovenDB.Models


@model Boven.Areas.Admin.Models.ErrandDetailVM


<div id="myModal" class="modal">
    <div class="modal-header">
    </div>
    <div class="modal-body">
        <table><tr>
                   <td>
                       <p id="imageDesc"></p>
                   </td>
                   <td>
                       <button type="button" class="close" data-dismiss="modal">&times;</button>
                   </td></tr>
        </table>
        <img id="imageOverlay" src="" width="600" />
        <p align="right"><a id="imageDeleteUrl" href="">Radera bild</a></p>
    </div>
    <div class="modal-footer">
    </div>
</div>







<h3>Ärende: @Model.RefNumber</h3>
<section id="leftColumn">
    <h3>Anmälan</h3>
    <p>
        <span class="label">Typ av brott: </span><br />
        @Model.TypeOfCrime
    </p>
    <p>
        <span class="label">Brottsplats: </span><br />
        @Model.Place
    </p>
    <p>
        <span class="label">Brottsdatum: </span><br />
        @Model.DateOfObservation
    </p>
    <p>
        <span class="label">Anmälare: </span><br />
        @Model.InformerName
    </p>
    <p>
        <span class="label">Telefon: </span><br />
        @Model.InformerPhone
    </p>
    <p>
        <span class="label">Observationer:</span><br />
        @Model.Observation
    </p>
</section>

<section id="rightColumn">
    <h3>Utredning</h3>
    <p>
        <span class="label">Status:</span><br />
        @Model.StatusName
    </p>
    <p>
        <span class="label">Ansvarig avdelning: </span><br />
        @Model.DepartmentName
    </p>
    <p>
        <span class="label">Handläggare: </span><br />
        @Model.EmployeeName
    </p>
    <p>
        <!--TODO-->
        <span class="label">Provtagning: </span><br />
        @if (Model.Samples.Count == 0)
        {
            <p>Finns inga provtagningsfiler.</p>
        }
        @foreach (Sample sample in Model.Samples)
        {
            <a href="javascript:myFunction('@sample.ErrandId', '@sample.SampleId', '@sample.SampleName', 'Sample');" class="img-thumbnail">
                <img src="~/uploads/@sample.SampleName" class="image" alt="..." width="80">
            </a>
        }
    </p>
    <p>
        <span class="label">Ytterligare information: </span><br />
        @Model.InvestigatorInfo
    </p>
    <p>
        <span class="label">Händelser: </span><br />
        @Model.InvestigatorAction
    </p>
    <p>
        <span class="label">Bilder: </span><br />
        @if (Model.Pictures.Count == 0)
        {
            <p>Finns inga bilder.</p>
        }
        @foreach (Picture image in Model.Pictures)
        {
            <a href="javascript:myFunction('@image.ErrandId', '@image.PictureId', '@image.PictureName', 'Picture');" class="img-thumbnail">
                <img src="~/uploads/@image.PictureName" class="image" alt="..." width="80">
            </a>
        }
    </p>



</section>



